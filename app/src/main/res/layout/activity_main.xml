<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/joinus"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:backgroundTint="@color/light"
        android:fontFamily="@font/poppins_semibold"
        android:text="Join Us"
        android:textSize="18dp"
        android:layout_marginLeft="125.5dp"
        android:layout_marginTop="620dp"/>

    <Button
        android:id="@+id/login"
        android:layout_width="157dp"
        android:layout_height="45dp"
        android:backgroundTint="@color/light"
        android:fontFamily="@font/poppins_semibold"
        android:text="Login"
        android:textSize="18dp"
        android:layout_marginLeft="125.5dp"
        android:layout_marginTop="680dp"/>

    <TextView
        android:id="@+id/cup"
        android:layout_width="95dp"
        android:layout_height="61dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/poppins_light"
        android:lineSpacingExtra="-72sp"
        android:text="CUP"
        android:textSize="48dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="200dp"/>

    <TextView
        android:id="@+id/coffee"
        android:layout_width="155dp"
        android:layout_height="61dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/poppins_bold"
        android:lineSpacingExtra="-72sp"
        android:text="coffee"
        android:textSize="48dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="200dp"/>

    <TextView
        android:id="@+id/reg"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/poppins_light"
        android:lineSpacingExtra="-72sp"
        android:text="Registration"
        android:textSize="32dp"
        android:layout_marginLeft="111dp"
        android:layout_marginTop="265dp"/>

    <View
        android:id="@+id/oval_1"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:background="@drawable/drawable_oval"
        tools:layout_editor_absoluteX="-68dp"
        tools:layout_editor_absoluteY="-113dp"
        android:backgroundTint="@color/dark"
        android:layout_marginLeft="-68dp"
        android:layout_marginTop="-113dp" />

    <View
        android:id="@+id/oval_2"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:background="@drawable/drawable_oval"
        android:backgroundTint="@color/light"
        android:layout_marginLeft="412dp"
        android:layout_marginTop="113dp"/>

    <View
        android:id="@+id/oval_3"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:background="@drawable/drawable_oval"
        android:backgroundTint="@color/gray" />

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="287dp"
        android:layout_height="56dp"
        android:background="@drawable/drawable_rectangle" />

    <TextView
        android:id="@+id/create_user"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/poppins_light"
        android:hint="Create Username"
        android:lineSpacingExtra="-30sp"
        android:textSize="20dp" />

    <View
        android:id="@+id/rectangle_2"
        android:layout_width="287dp"
        android:layout_height="56dp"
        android:background="@drawable/drawable_rectangle" />

    <TextView
        android:id="@+id/create_pass"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/poppins_light"
        android:hint="Create Password"
        android:lineSpacingExtra="-30sp"
        android:textSize="20dp" />

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="287dp"
        android:layout_height="56dp"
        android:background="@drawable/drawable_rectangle" />

    <TextView
        android:id="@+id/create_email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/poppins_light"
        android:hint="Email ID"
        android:lineSpacingExtra="-30sp"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/beans" />

</RelativeLayout>