<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    tools:context=".information_page">

    <View
        android:id="@+id/view8"
        android:layout_width="172dp"
        android:layout_height="127dp"
        android:background="@drawable/ellipse_1"
        android:backgroundTint="@color/dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view7"
        android:layout_width="370dp"
        android:layout_height="58dp"
        android:layout_marginEnd="-50dp"
        android:background="@drawable/fillrect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/exist"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/cross2"
        android:backgroundTint="@color/light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/coffee"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:fontFamily="@font/poppins_bold"
            android:text="coffee"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/cup"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:fontFamily="@font/poppins_light"
            android:layout_marginStart="5dp"
            android:text="CUP"
            android:textColor="@color/white"
            android:textSize="24dp" />
    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="370dp"
        android:layout_height="58dp"
        android:background="@drawable/fillrect"
        android:backgroundTint="@color/dark"
        android:layout_marginStart="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="171dp"
        android:layout_height="132dp"
        android:background="@drawable/ellipse_3"
        android:backgroundTint="@color/dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/coffeename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins"
        android:text="Mochacino"
        android:layout_marginStart="-25dp"
        android:textColor="@color/white"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view8"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/pricecounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppins"
        android:text="Price: 50$"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Add To My Basket"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="163dp"
        android:layout_height="240dp"
        android:layout_marginBottom="165dp"
        android:background="@drawable/ellipse_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="84dp"
        android:layout_height="200dp"
        android:layout_marginBottom="135dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/ellipse_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/shape"
        android:layout_width="296dp"
        android:layout_height="196dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagecoffee"
        android:layout_width="290dp"
        android:layout_height="190dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mochacino"
        app:layout_constraintBottom_toBottomOf="@+id/shape"
        app:layout_constraintEnd_toEndOf="@+id/shape"
        app:layout_constraintStart_toStartOf="@+id/shape"
        app:layout_constraintTop_toTopOf="@+id/shape"
        app:shapeAppearanceOverlay="@style/roundimageview" />

    <TextView
        android:id="@+id/coffeedesc"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="The birthplace of moccacino, or mocha, is America. Although the American drink is very similar to the Italian latte. Mocha also contains espresso, hot milk and... chocolate. Coffee with chocolate is decorated with lush milk foam and a cloud of whipped cream."
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shape" />

    <ImageView
        android:id="@+id/gotoshop"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:backgroundTint="@color/dark"
        android:src="@drawable/basket"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>